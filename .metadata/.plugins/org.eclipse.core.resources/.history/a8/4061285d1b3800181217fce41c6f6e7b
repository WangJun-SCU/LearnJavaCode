public class Factorial {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	/*
	 * 计算X!
	 * 使用递归
	 */
	public static int factorial(int n) {
		if( 1 == n) {
			return 1;
		}else if( 2 == n) {
			return 2;
		}else {
			return factorial(n -1) * n;
		}
	}

}
