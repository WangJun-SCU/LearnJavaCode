package com.wangjun.arithmetic;

import java.util.Arrays;

/** 
 * 冒泡排序
 * 
 * @author wangjun 
 * @email  scuwangjun@hotmail.com
 * @time   2018年4月5日 下午7:15:13 
 */
public class SortBubble {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] arr = {3,1,2,4,5,6,3,1,2};
		doBuddle2(arr);
		System.out.println(Arrays.toString(arr));
	}
	
	/**
	 * 冒泡排序的实现
	 * 从小到大，冒到最后面
	 * 第一个for循环次数，可以理解每个i的值是每次遍历最大值放的位置
	 * 第二个for进行冒泡交换
	 */
	public static void doBubble(int[] arr) {
		boolean isChange = false;
		for(int i = arr.length - 1; i > 0; i--) {
			isChange = false;
			for(int j = 0; j < i; j++) {
				if(arr[j] > arr[j+1]) {
					int tem = arr[j];
					arr[j] = arr[j+1];
					arr[j+1] = tem;
					isChange = true;
				}
			}
			if(!isChange) {
				return;
			}
		}
	}
	
	/*
	 * 冒到最前面
	 */
	 public static void doBuddle2(int a[])  
	    {  
	        int temp;  
	        for(int i=0;i<a.length;i++)  
	        {  
	            for(int j=i+1;j<a.length;j++)  
	            {  
	                if(a[i]>a[j])  
	                {  
	                    temp=a[j];  
	                    a[j]=a[i];  
	                    a[i]=temp;  
	                }  
	            }  
	        }  
	          
	}

}
