package com.wangjun.arithmetic;

/*
 * shell排序
 */
public class SortShell {

	public static void main(String[] args) {
		
	}
	
	public void sortShell(int[] arr) {
		
		int len = arr.length;
		for(int r = len/2; r >= 1; r = r/2) {
			//进行插入排序
			for(int i = r; i < len; i++) {
				int tem = arr[r];
				int j =  i - r;
				while(j >= 0 && tem > arr[j]) {
					arr[j + r] = arr[j];
					j -= r;
				}
				arr[j + r] = tem;
			}
		}
		
		
	}

}
